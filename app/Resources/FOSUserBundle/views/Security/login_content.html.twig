{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div id="loginbox" style="margin-top:50px;"
         class="mainbox  col-xs-6 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            {% if error %}
                <div class="alert alert-danger">
                    <strong>{{ 'ошибка входа! Недопустимые учетные данные'|trans }}!</strong>
                </div>
            {% endif %}
            <div class="panel-heading">

                <div class="panel-title">{{ 'Вход'|trans }}</div>
                <div title="восстановить пароль" style="float:right; font-size: 80%; position: relative; top:-10px">
                    <a href="{{ path('fos_user_resetting_request') }}">{{ 'Забыли пароль'|trans }}</a> <span
                            class="glyphicon glyphicon-question-sign"></span>
                </div>
            </div>

            <div style="padding-top:30px" class="text-center panel-body">

                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                <form id="loginform" class="form-horizontal" role="form" action="{{ path("fos_user_security_check") }}"
                      method="post">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                    {% endif %}

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input id="login-username" type="text" class="form-control" name="_username"
                               value="{{ last_username }}" required="required"
                               placeholder="Email"/>
                    </div>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input id="login-password" type="password" class="form-control" name="_password"
                               placeholder="{{ 'пароль'|trans }}">
                    </div>
                    <div class="input-group">
                        <span class="checkbox">
                            <label style="font-size: 1.5em">
                                <input type="checkbox" id="remember_me" name="_remember_me" value="1" checked/>
                            <span class="cr"><i class="cr-icon fa fa-check"></i></span>
                            </label>
                        </span>
                        <label for="remember_me">{{ 'запомнить меня'|trans }}</label>
                    </div>

                    <div class="form-group">
                        <div class="col-md-13 control text-center">

                            <div class="text-center">
                                <input class=" btn btn-success" type="submit" id="_submit" name="_submit"
                                       value="{{ 'отправить'|trans }}"/>
                                <a class="btn btn-danger" href="{{ path('fos_user_registration_register') }}">
                                    {{ 'регистрация'|trans }}
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
